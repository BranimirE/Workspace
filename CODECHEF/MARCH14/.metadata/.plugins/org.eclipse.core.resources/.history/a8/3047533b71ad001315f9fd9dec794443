#include <cstdio>
#include <vector>
#include <algorithm>
using namespace std;
int a[10005], b[10005], n;
vector<pair<int,int> > ans;
int main(){
	scanf("%d", &n);
	for(int i = 0; i < n; i++){
		scanf("%d", &a[i]);
		b[i] = a[i];
	}
	sort(b, b + n);
	for(int i = 0; i < n; i++){
		int m = i;
		vector<int> tmp;
		for(int j = i; j < n; j++)
			if(a[j] == b[i]){
				tmp.push_back(j);
			}
		int l = i, r = m;
		if(l != r)	ans.push_back(make_pair(l + 1, r + 1));
		while(l < r){
			swap(a[l], a[r]);
			l++;
			r--;
		}
	}
	printf("%d\n", ans.size());
	for(int i = 0; i < ans.size(); i++)
		printf("%d %d\n", ans[i].first, ans[i].second);
	return 0;
}
