#include <cstdio>
#include <vector>

using namespace std;
int a[n], n;
int main(){
	scanf("%d", &n);

	for(int i = 0; i < n; i++)
		cin >> a[i];
	vector<pair<int,int> > ans;
	for(int i = 0; i < n; i++){
		int m = i;
		for(int j = i + 1; j < n; j++)
			if(a[j] < a[m])
				m = j;
		int l = i, r = m;
		if(l != r)
			ans.push_back(make_pair(l + 1, r + 1));
		while(l < r){
			swap(a[l], a[r]);
			l++;
			r--;
		}
	}
	cout << ans.size() << endl;
	for(int i = 0; i < ans.size(); i++)
		cout << ans[i].first << " " << ans[i].second << endl;

	return 0;
}
