#include <iostream>

using namespace std;

int main(){
  int n = 100000, m = n;
  cout << n << " " << m << endl;
  for(int i = 0; i < n; i++){
    if(i)cout << " ";
    cout << 30030;
  }
  cout << endl;
  for(int i = 0; i < m; i++)
    cout << 30030 << " " << 1 << " " << n << endl;

  return 0;
}

