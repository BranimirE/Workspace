#include <cstdio>
#include <vector>
#include <cstring>
#include <iostream>

using namespace std;

#define MAX 100010
typedef long long int Number;
Number v[MAX] = {0};
Number a[MAX];
vector<pair<int,int> > sol;
int n, k;
void solve(int mint){//minimo tama√±o
	Number sum = 0;

	for(int i = 1; i < mint - 1; i++)
		sum += v[i];
	memset(a, 0, sizeof(a));
	for(int i = mint - 1; i <= n; i++){
		sum += v[i];
		a[i] = sum;
		sum -= v[i - mint + 2];
	}

	for(int i = 1; i <= n; i++)
		cout << " " << a[i];
	cout << endl;

	sum = a[mint - 1];
	Number may = (1LL<<60LL) * -1;
	int ini, fin;
	ini = 1;
	for(int i = mint; i <= n; i++){
		sum += v[i];
		fin = i;
		if(sum > may){
			sol.clear();
			may = sum;
			sol.push_back(make_pair(ini, fin));
		}else if(sum == may){
			sol.push_back(make_pair(ini, fin));
		}
		if(sum < 0){
			sum = a[i];
			ini = i - mint + 2;
		}
	}
	cout << "maxsum = " << may << endl;
	for(int i = 0; i < sol.size(); i++)
		cout << sol[i].first << " " << sol[i].second << endl;
}
int main(){
	int t;

	//scanf("%d", &t);
	//while(t--){
		//scanf("%d %d", &n, &k);
		cin >> n;
		v[0] = 0;
		for(int i = 1; i <= n; i++)
			scanf("%lld", &v[i]);
		solve(3);
	//}

	return 0;
}
