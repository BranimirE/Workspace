#include <cstdio>
#include <vector>
#include <algorithm>
using namespace std;
int a[10005], b[10005], n;
vector<pair<int,int> > ans;
int main(){
	scanf("%d", &n);
	for(int i = 0; i < n; i++){
		scanf("%d", &a[i]);
		b[i] = a[i];
	}
	sort(b, b + n;)
	for(int i = 0; i < n; i++){
		int m = i;
		for(int j = i + 1; j < n; j++)
			if(a[j] < a[m])
				m = j;
		int l = i, r = m;
		if(l != r)
			ans.push_back(make_pair(l + 1, r + 1));
		while(l < r){
			swap(a[l], a[r]);
			l++;
			r--;
		}
	}
	cout << ans.size() << endl;
	for(int i = 0; i < ans.size(); i++)
		cout << ans[i].first << " " << ans[i].second << endl;

	return 0;
}
